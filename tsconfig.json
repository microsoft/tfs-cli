{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2018",
		"moduleResolution": "node",
		"declaration": false,
		"sourceMap": true,
		"newLine": "LF",
		"noFallthroughCasesInSwitch": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,

		// Note: dom is specified below so that the JSZip d.ts can use the Blob type.
		"lib": ["es2018", "dom"],
		"outDir": "_build"
	},
	"include": [
		"app/app.ts",
		"app/exec/**/*.ts",
		"typings/**/*.d.ts"
		/*,
		"node_modules/@types/q/index.d.ts" // We augment the definitions with a file under typings, so we need an explicit reference here.*/
	],
	"exclude": [
		"tests/**/*"
	]
}